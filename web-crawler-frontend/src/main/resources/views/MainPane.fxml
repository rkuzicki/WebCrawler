<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.edu.agh.presenter.AppPresenter" minHeight="600">
    <top>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="%configuration_tab_text" >
                <graphic>
                    <ImageView>
                        <image>
                            <Image url="/icons/configuration.png"/>
                        </image>
                    </ImageView>
                </graphic>
                <fx:include source="tabs/ConfigurationTab.fxml" />
            </Tab>
            <Tab text="%results_tab_text">
                <graphic>
                    <ImageView>
                        <image>
                            <Image url="/icons/results.png" />
                        </image>
                    </ImageView>
                </graphic>
                <fx:include source="tabs/ResultsTab.fxml" />
            </Tab>
            <Tab text="%settings_tab_text">
                <graphic>
                    <ImageView>
                        <image>
                            <Image url="/icons/settings.png" />
                        </image>
                    </ImageView>
                </graphic>
                <fx:include source="tabs/SettingsTab.fxml" />
            </Tab>
        </TabPane>
    </top>
</BorderPane>
